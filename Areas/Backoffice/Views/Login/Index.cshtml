@{
    Layout = null;

    var url = "/Areas/Backoffice/Themes/";   
}

<!DOCTYPE html>

<html class="no-js">
<head>
    <meta charset="utf-8" />
    <title>Yönetim paneli girişi | Boğaziçi Medya internet A.Ş.</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link rel="stylesheet" type="text/css" href="@MvcHtmlString.Create(url)assets/plugins/select2/select2.css" />
    <link rel="stylesheet" type="text/css" href="@MvcHtmlString.Create(url)assets/plugins/select2/select2-metronic.css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="@MvcHtmlString.Create(url)assets/css/style-metronic.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/css/style-responsive.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/css/themes/default.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@MvcHtmlString.Create(url)assets/css/pages/login.css" rel="stylesheet" type="text/css" />
    <link href="@MvcHtmlString.Create(url)assets/css/custom.css" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->

   
</head>
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/Backoffice/Index">
            <img src="@MvcHtmlString.Create(url)assets/img/logo-big.png" alt="" />
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <h3 class="form-title">Yönetim paneli girişi</h3>
            <div id="divSonuc"></div>                        
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">E-mail adresi</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="E-mail adresi" name="username" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Şifre</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Şifre" name="password" />
                </div>
            </div>
            <div class="form-actions">
                <label class="checkbox">
                    <input type="checkbox" name="remember" value="" id="remember" /> Beni hatırla
                </label>
                <button type="submit" onclick="$('form').ajaxSubmit();" class="btn green pull-right">
                    Giriş <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>            
            <div class="forget-password">
                <h4>Şifremi unuttum ?</h4>
                <p>
                    buraya
                    <a href="javascript:;" id="forget-password">
                        tıklayarak
                    </a>
                    şifrenizi yenileyebilirsiniz.
                </p>
            </div>
}
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form class="forget-form" action="index.html" method="post">
            <h3>Şifremi unuttum ?</h3>
            <p>
                E-mail adresinize şifreniz gönderilecektir.
            </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn">
                    <i class="m-icon-swapleft"></i> Geri
                </button>
                <button type="submit" class="btn green pull-right">
                    Gönder <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        2015 &copy; Bosphorusmedia. Web site kontrol paneli.
    </div>
    <!-- END COPYRIGHT -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
        <script src="@MvcHtmlString.Create(url)assets/plugins/respond.min.js"></script>
        <script src="@MvcHtmlString.Create(url)assets/plugins/excanvas.min.js"></script>
        <![endif]-->
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery-migrate-1.2.1.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/bootstrap-hover-dropdown/bootstrap-hover-dropdown.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="@MvcHtmlString.Create(url)assets/plugins/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="@MvcHtmlString.Create(url)assets/plugins/select2/select2.min.js"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@MvcHtmlString.Create(url)assets/scripts/core/app.js" type="text/javascript"></script>
    <script src="@MvcHtmlString.Create(url)assets/scripts/custom/login.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
		jQuery(document).ready(function() {
		  App.init();
		  Login.init();

		 
		});
    </script>
    <script>
    jQuery(function () {
        jQuery('form').submit(function () {

            if ($("#remember").is(':checked')) {
                $("#remember").val("1");
            }
            else {
                $("#remember").val("0");
            }            

            var formData = new FormData(jQuery(this)[0]);
            jQuery.ajax({
                url: '@Url.Action("UyeGirisi", "Login")',
                type: 'POST',
                data: formData,
                async: false,
                success: function (data) {
                    jQuery('#divSonuc').html('').html(data);
                },
                cache: false,
                contentType: false,
                processData: false
            });
            return false;
        });
    });
    </script>
    <!-- END JAVASCRIPTS -->
</body>
</html>
